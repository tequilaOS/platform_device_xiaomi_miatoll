    <!-- The padding on the start of the statusbar -->
    <dimen name="status_bar_padding_start">4dp</dimen>

    <!-- The padding on the end of the statusbar -->
    <dimen name="status_bar_padding_end">3dp</dimen>

    <!-- Margin on the left side of the carrier text on Keyguard -->
    <dimen name="keyguard_carrier_text_margin">20dp</dimen>

    <!-- Margin on the right side of the system icon group on Keyguard. -->
    <dimen name="system_icons_keyguard_padding_end">8dp</dimen>

    <!-- Padding before battery level text in status bar, QS, and Keyguard -->
    <dimen name="battery_level_padding_start">3dp</dimen>

    <!-- The text size for battery level -->
    <dimen name="battery_level_text_size">9sp</dimen>

    <!-- Padding between signal cluster and battery icon -->
    <dimen name="signal_cluster_battery_padding">3.5dp</dimen>

    <!-- The font size for the clock in the status bar. -->
    <dimen name="status_bar_clock_size">13.5sp</dimen>

    <!-- Location on the screen of the center of the fingerprint sensor. -->
    <dimen name="physical_fingerprint_sensor_center_screen_location_x">1080px</dimen>
    <dimen name="physical_fingerprint_sensor_center_screen_location_y">760px</dimen>

    <!-- Location on the screen of the center of the physical power button. -->
    <dimen name="physical_power_button_center_screen_location_y">760px</dimen>

    <!-- Pad content in navbar for rounded corners -->
    <dimen name="rounded_corner_content_padding">16dp</dimen>

    <!--  Total minimum padding to enforce to ensure that the dot can always show  -->
    <dimen name="ongoing_appops_dot_min_padding">16dp</dimen>

